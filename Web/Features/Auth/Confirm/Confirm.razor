@page "/account/confirm/{userId:guid}"
@inherits ConfirmBase

@if (!_loaded)
{
    <p class="text-center">Cargando...</p>
}
else if (_confirmed)
{
    <img src="images/rocket-confirm.png" alt="Confirmación" class="confirmation-icon" />
    <h3>¡Bienvenida, @_userName!</h3>
    <p>@_message</p>
    <button class="btn btn-primary btn-block" @onclick="GoToLogin">Iniciar sesión</button>
}
else
{
    <div class="alert alert-danger text-center">
        <p>@_message</p>
    </div>
}

<style>
    .confirmation-card {
        max-width: 400px;
        margin: 5rem auto;
        padding: 2rem;
        text-align: center;
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    .confirmation-icon {
        height: 80px;
        margin-bottom: 1.5rem;
    }

    .confirmation-card h3 {
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .confirmation-card p {
        margin-bottom: 2rem;
    }

    .btn-block {
        width: 100%;
        padding: 0.75rem;
    }
</style>